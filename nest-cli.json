{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "watchAssets": true,
    "assets": ["assets/**/*"],
    "deleteOutDir": true,
    "tsConfigPath": "tsconfig.build.json",
    "builder": {
      "type": "swc",
      "options": {
        "swcrcPath": ".swcrc",
        "typeCheck": true
      }
    }
  }
}
